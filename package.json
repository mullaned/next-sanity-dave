{
  "name": "next-sanity-dave",
  "version": "1.1.0",
  "description": "Next.js + Sanity: A Powerful Website Starter with Real-time Visual Editing",
  "keywords": [
    "Sanity",
    "Next.js",
    "Headless CMS",
    "Visual Editing",
    "Live Content API (LCAPI)",
    "Real-time"
  ],
  "homepage": "https://github.com/mullaned/next-sanity-dave#readme",
  "bugs": {
    "url": "https://github.com/mullaned/next-sanity-dave/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mullaned/next-sanity-dave.git"
  },
  "workspaces": [
    "studio",
    "frontend"
  ],
  "scripts": {
    "dev": "npm-run-all --parallel --print-label dev:*",
    "dev:next": "npm run dev --workspace=frontend",
    "dev:studio": "npm run dev --workspace=studio",
    "pre-commit": "npm run format && npm run typegen && npm run check:biome && npm run type-check && npm run test:coverage --workspace=frontend",
    "format:prettier": "prettier --cache --write .",
    "format": "biome format --write .",
    "lint:biome": "biome lint --write .",
    "check:biome": "biome check --write .",
    "check:biome:ci": "biome ci .",
    "import-sample-data": "cd studio && sanity dataset import sample-data.tar.gz --replace",
    "lint": "npm run lint --workspace=frontend",
    "test": "npm run test:all --workspaces --if-present",
    "test:coverage": "npm run test:coverage --workspace=frontend",
    "type-check": "npm run type-check --workspaces",
    "typegen": "npm run typegen --workspace=frontend",
    "prepare": "node -e \"try { require('husky') } catch (e) { if (e.code !== 'MODULE_NOT_FOUND') throw e }\" && husky || true",
    "semantic-release": "semantic-release"
  },
  "prettier": "@sanity/prettier-config",
  "devDependencies": {
    "@biomejs/biome": "2.3.7",
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@sanity/prettier-config": "^2.0.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "husky": "^9.1.7",
    "npm-run-all2": "^5.0.2",
    "prettier": "^3.6.2",
    "semantic-release": "^25.0.2"
  },
  "dependencies": {
    "next-seo": "^7.0.1"
  }
}
